@model HospitalManagement.Models.ReferenceDoctor
@{
    bool isEdit = ViewBag.IsEdit ?? false;
    ViewData["Title"] = isEdit ? "Edit Reference Doctor" : "Add Reference Doctor";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

@section Styles {
    <style>
        html, body {
            background-color: #f1f4f6;
            height: auto;
        }

        .content {
            padding: 30px;
            min-height: calc(100vh - 80px);
        }

        .card {
            margin: 2rem auto;
            max-width: 1500px; /* Match user form */
            border: none;
            border-radius: 1rem;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(90deg, #1ab394, #16a085);
            color: #fff;
            font-weight: 500;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-success {
            background-color: #1ab394;
            border: none;
            border-radius: 30px;
            padding: 8px 25px;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-radius: 20px;
            padding: 6px 20px;
        }

        .form-control {
            border-radius: 0.5rem;
        }

        label {
            font-weight: 500;
        }
    </style>
}

<section class="content" style="height: calc(100vh - 100px); overflow-y: auto;">
    <div class="container-fluid">
        <!-- Breadcrumb -->
        <div class="page-header">
            <h4 class="page-title">@ViewData["Title"]</h4>
            <ul class="breadcrumbs">
                <li class="nav-home"><a asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home"></i></a></li>
                <li class="separator"><i class="fas fa-chevron-right"></i></li>
                <li class="nav-item"><a asp-controller="ReferenceDoctor" asp-action="Index">Reference Doctors</a></li>
                <li class="separator"><i class="fas fa-chevron-right"></i></li>
                <li class="nav-item"><a href="#">@ViewData["Title"]</a></li>
            </ul>
        </div>

        <!-- Card -->
        <div class="card shadow">
            <div class="card-header">
                <h4 class="card-title mb-0">@ViewData["Title"]</h4>
                <a asp-action="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
            <div class="card-body">
                <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    @if (isEdit)
                    {
                        @Html.HiddenFor(m => m.Id)
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>First Name <span class="text-danger">*</span></label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Last Name <span class="text-danger">*</span></label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Hospital Name</label>
                            <input asp-for="HospitalName" class="form-control" placeholder="Enter hospital name" />
                            <span asp-validation-for="HospitalName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Degree</label>
                            <input asp-for="Degree" class="form-control" placeholder="e.g. MBBS, MD" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Contact No <span class="text-danger">*</span></label>
                            <input asp-for="ContactNo" class="form-control" placeholder="10-digit number" pattern="\d{10}" />
                            <span asp-validation-for="ContactNo" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="example@mail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label>Address</label>
                            <textarea asp-for="Address" class="form-control" rows="3" placeholder="Enter full address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check">
                                <input asp-for="Active" class="form-check-input" type="checkbox" />
                                <label asp-for="Active" class="form-check-label">Active</label>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success rounded-pill px-5">
                            <i class="fas @(isEdit ? "fa-save" : "fa-plus")"></i> @(isEdit ? "Update Doctor" : "Add Doctor")
                        </button>
                        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 ml-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
