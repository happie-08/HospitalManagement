@model HospitalManagement.Models.ApplicationUser
@{
    ViewData["Title"] = "Add User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var breadcrumbs = new List<(string Label, string? Url)> {
        ("Home", "/Dashboard"),
        ("Users List", "/User"),
        ("Add User", null)
    };
    ViewData["PageTitle"] = "Add User";
    ViewData["Breadcrumbs"] = breadcrumbs;
}
@section Styles {
    <link rel="stylesheet" href="~/Admin/css/User.css" />
}

@section PageHeader {
    @await Html.PartialAsync("_PageHeader")
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card shadow border border-primary">
                    <div class="card-body">
                        @if (ViewBag.RequiredError != null)
                        {
                            <div class="alert alert-danger">
                                <strong>@ViewBag.RequiredError</strong>
                            </div>
                        }

                        <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- Profile Image -->
                            <div class="text-center mb-4">
                                <img src="~/uploads/user.png" class="profile-img" />
                                <div>
                                    <label class="btn-upload">
                                        <input type="file" name="ImageFile" data-val="false" hidden />
                                    </label>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Full Name <span class="text-danger">*</span></label>
                                    <input asp-for="Name" class="form-control" required />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" pattern="\d{10}" title="Enter 10-digit phone number" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Email <span class="text-danger">*</span></label>
                                    <input asp-for="Email" class="form-control" required />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Username <span class="text-danger">*</span></label>
                                    <input asp-for="UserName" class="form-control" required />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Password <span class="text-danger">*</span></label>
                                    <input type="password" name="Password" class="form-control" required minlength="6" />
                                    <span class="text-danger">@Html.ValidationMessage("Password")</span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Address</label>
                                    <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Date of Birth</label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Gender</label>
                                    <div class="gender-group">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" checked />
                                            <label class="form-check-label">Male</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" />
                                            <label class="form-check-label">Female</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-md-12">
                                <label>Hobbies</label>
                                <div class="hobby-group">
                                    @foreach (var hobby in new[] { "Gaming", "Dancing", "Coding", "Music", "Sports", "Travel", "Cooking" })
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="Hobby" value="@hobby" @(Model.Hobby?.Contains(hobby) == true ? "checked" : "") />
                                            <label class="form-check-label">@hobby</label>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Create User
                                </button>
                                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
