@{
    ViewData["Title"] = "Users List";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml"; // Updated to your new layout
}

<div class="content">
    <div class="page-inner">
        <div class="page-header">
            <h4 class="page-title">Users List</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="fas fa-chevron-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Users</a>
                </li>
            </ul>
            @* <div class="ml-auto">
                <a href="/User/Create" class="btn btn-success btn-sm">
                    <i class="fas fa-user-plus"></i> Add User
                </a>
            </div> *@
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Users Table with Export Options</h4>
                        <a href="/User/Create" class="btn btn-success btn-sm">
                            <i class="fas fa-user-plus"></i> Add User
                        </a>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="userTable" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Profile</th>
                                        <th>Email / Phone</th>
                                        <th>Username</th>
                                        <th style="display:none">Address</th>
                                        <th>DOB / Gender</th>
                                        <th>Hobby</th>
                                        <th style="width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" rel="stylesheet" />
    <style>
        .btn-success {
            background-color: #1ab394;
            border-color: #1ab394;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .dataTables_wrapper .dt-buttons {
            float: right;
        }
    </style>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            var table = $('#userTable').DataTable({
                ajax: {
                    url: '/User/GetUsers',
                    type: 'GET',
                    dataSrc: 'data'
                },
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return meta.row + 1;
                        }
                    },
                    {
                        data: 'image',
                        render: function (data) {
                            return `<img src="/uploads/${data}" class="img-circle" style="width: 40px; height: 40px; object-fit: cover;" onerror="this.src='/images/default-user.png'" />`;
                        }
                    },
                    {
                        data: 'email',
                        render: function (data, type, row) {
                            return `<strong>${data}</strong><br/><small class="text-muted">${row.phoneNumber ?? '-'}</small>`;
                        }
                    },
                    { data: 'userName' },
                    { data: 'address', visible: false },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return `${row.dateOfBirth} / ${row.gender ?? '-'}`;
                        }
                    },
                    { data: 'hobby' },
                    {
                        data: 'id',
                        render: function (data, type, row) {
                            return `
                                <a href="/User/Edit/${data}" class="btn btn-info btn-sm"><i class="fas fa-edit"></i> Edit</a>
                                <button type="button" class="btn btn-danger btn-sm" onclick="deleteUser('${data}', '${row.userName}')">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            `;
                        },
                        orderable: false,
                        searchable: false
                    }
                ],
                responsive: true,
                pageLength: 10,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'UsersList' },
                    { extend: 'pdf', title: 'UsersList' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');
                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });

        function deleteUser(userId, userName) {
            if (confirm(`Are you sure you want to delete ${userName}?`)) {
                $.ajax({
                    url: '/User/Delete/' + userId,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        alert(response.message);
                        $('#userTable').DataTable().ajax.reload();
                    },
                    error: function () {
                        alert('Error deleting user!');
                    }
                });
            }
        }
    </script>
}
