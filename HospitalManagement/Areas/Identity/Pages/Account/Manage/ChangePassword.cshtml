@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_NavbarLayout.cshtml";
}

@section Styles {
    <style>
        html, body {
            background-color: #f1f4f6;
            height: auto;
        }

        .content {
            padding: 30px;
            min-height: calc(100vh - 80px);
        }

        .card {
            margin: 2rem auto;
            max-width: 800px;
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .card-header {
            background: linear-gradient(90deg, #1ab394, #16a085);
            color: #fff;
            font-weight: 500;
        }

        .btn-success {
            background-color: #1ab394;
            border: none;
            border-radius: 30px;
            padding: 8px 25px;
        }

            .btn-success:hover {
                background-color: #17a085;
            }

        .form-control {
            border-radius: 0.5rem;
        }

        label {
            font-weight: 500;
        }
    </style>
}

<section class="content">
    <div class="container-fluid">
        <!-- Breadcrumbs Start -->
        <div class="page-header">
            <h4 class="page-title">Change Password</h4>
            <ul class="breadcrumbs">
                <li class="nav-home">
                    <a asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li class="separator"><i class="fas fa-chevron-right"></i></li>
                <li class="nav-item"><a href="#">Change Password</a></li>
            </ul>
        </div>
        <!-- Breadcrumbs End -->
        <div class="card shadow">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.OldPassword" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.OldPassword) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.NewPassword) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">
                            @Html.DisplayNameFor(m => m.Input.ConfirmPassword) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success rounded-pill px-5">
                            <i class="fas fa-key"></i> Change Password
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary rounded-pill px-4 ml-2">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
